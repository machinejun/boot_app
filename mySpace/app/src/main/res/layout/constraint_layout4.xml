<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center|left"
        android:text="Raze Galactic"
        android:textSize="25dp"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/galaxy"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toStartOf="@id/img2"
        app:layout_constraintBottom_toTopOf="@id/text1"
        android:src="@drawable/space_station_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/img2"
        app:layout_constraintStart_toEndOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintEnd_toStartOf="@id/img3"
        android:src="@drawable/rocket_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/img3"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintStart_toEndOf="@id/img2"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/rover_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/mini1"
        app:layout_constraintEnd_toEndOf="@id/img1"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/img1"
        android:text="Space Station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mini2"
        app:layout_constraintEnd_toEndOf="@id/img2"
        app:layout_constraintStart_toStartOf="@id/img2"
        app:layout_constraintTop_toBottomOf="@id/img2"
        android:text="Flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mini3"
        app:layout_constraintEnd_toEndOf="@id/img3"
        app:layout_constraintStart_toStartOf="@id/img3"
        app:layout_constraintTop_toBottomOf="@id/img3"
        android:text="Rovers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text1"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text2"
        app:layout_constraintBottom_toTopOf="@id/switch1"
        android:text="DCA"
        android:gravity="center"
        android:paddingEnd="30dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/galaxy"
        android:layout_width="150dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_margin="25dp"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="MARS"
        android:gravity="center"
        android:paddingStart="30dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/galaxy"
        android:layout_width="150dp"
        android:layout_height="120dp"/>
    <ImageView
        app:layout_constraintEnd_toEndOf="@id/text2"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        android:src="@drawable/double_arrows"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <Switch
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"

        android:background="#FF5722"
        android:id="@+id/switch1"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Way        "
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/tex4"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/switch1"
        app:layout_constraintTop_toBottomOf="@id/switch1"
        android:background="#FF5722"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="10dp"
        android:text="1 Traveller"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/img4"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/galaxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintTop_toTopOf="@id/img4"
        app:layout_constraintBottom_toBottomOf="@id/img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img4"
        android:src="@drawable/rocket_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    
    <TextView
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:background="@color/galaxy"
        android:text="DEPART"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>