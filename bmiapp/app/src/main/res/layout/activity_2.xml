<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar"/>

    <FrameLayout
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        android:layout_width="400dp"
        android:layout_height="400dp">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/underweight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/underweight"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="당신은 저체중입니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/normalfat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/normal"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="당신은 정상입니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/overweight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/overweight"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="당신은 과체중입니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/obesity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/obesit"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="당신은 비만입니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/external"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/extermel"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <TextView
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="당신은 고도비만입니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>