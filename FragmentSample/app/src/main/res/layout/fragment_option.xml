<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OptionFragment"
    android:background="#7D8181">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/sample"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/iconbox"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_gravity="center"
                    android:id="@+id/saleHistory"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_baseline_receipt_24"
                        android:background="@drawable/icon_background"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:tint="@color/iconColor" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="판매내역"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_gravity="center"
                    android:id="@+id/buyHistory"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_baseline_receipt_24"
                        android:background="@drawable/icon_background"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:tint="@color/iconColor" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="구매내역"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_gravity="center"
                    android:id="@+id/favorite"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:padding="20dp"
                        android:src="@drawable/ic_baseline_receipt_24"
                        android:background="@drawable/icon_background"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:tint="@color/iconColor" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="관심목록"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/setMyhome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="내 동네 설정하기"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/certifyMyhome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_gamepad_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="내 동네 인증하기"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/noteKeword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_label_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="키워드 알림"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_widgets_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="모아보기"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/homeNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_edit_note_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="동네생활 글"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/homeComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_sms_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="동내생활 댓글"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/homeSubjectList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_star_outline_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="키워드 알림"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/homeNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_edit_note_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="동네생활 글"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/homeComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_sms_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="동내생활 댓글"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>